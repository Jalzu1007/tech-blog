<!-- Log in tile section -->
<div class="tile is-ancestor m-6 p-6">
  <div class="tile is-6 is-vertical is-parent">
    <div class="tile is-child box has-text-centered">
      <p class="title">Login</p>
      <!-- Log in -->
      <form class="login-form"> <!-- Add form element -->
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" id="email-login">
          </p>
        </div>
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password" id="password-login">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <button class="button login-form" style="background-color:#526D82; color:whitesmoke;">Submit</button>
          </p>
        </div>
      </form>
    </div>
  </div>

  <!-- Sign up tile section -->
  <div class="tile is-6 is-vertical is-parent">
    <div class="tile is-child box has-text-centered">
      <p class="title">Signup</p>
      <!-- Sign up input -->
      <form class="signup-form"> <!-- Add form element -->
        <div class="field">
          <div class="control has-icons-left has-icons-right">
            <input class="input" type="text" placeholder="Username" id="username-signup">
          </div>
        </div>
        <!-- Email -->
        <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" id="email-signup">
          </p>
        </div>
        <!-- Password -->
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Password" id="password-signup">
          </p>
        </div>
        <!-- Submit button -->
        <div class="field is-grouped is-justify-content-center">
          <div class="control">
            <button class="button signup-form" style="background-color:#526D82; color:whitesmoke;">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="../public/js/login.js"></script>