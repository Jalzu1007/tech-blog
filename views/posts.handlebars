<!-- Iterate over posts -->
{{#each posts as |post|}}
<section class="card column is-6">
  <a href="/post/{{id}}">
    <header class="card-header">
      <p class="card-header-title">{{username}} {{title}}</p>
    </header>
    <div class="card-content">
      <div class="content">
        <p class="subtitle">{{post_date}}</p>
        <p>{{content}}</p>
        <p>{{comment}}</p>
      </div>
    </div>
  </a>
</section>
{{/each}}

<!-- New Post Button -->
<button class="button is-primary new-post">+</button>

<!-- New Post Form -->
<form method="POST" class="hide post-create">
  <h1 class="subtitle">{{username}}</h1>
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <input class="input" type="text" name="title">
    </div>
  </div>
  <div class="field">
    <label class="label">Content</label>
    <div class="control">
      <input class="input" type="text" name="content">
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary post-create" type="submit">Create Post</button>
    </div>
  </div>
</form>